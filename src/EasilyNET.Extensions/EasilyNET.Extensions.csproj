        <PackageProjectUrl>https://www.nuget.org/packages/EasilyNET.Extensions</PackageProjectUrl>
        <Description>用于扩展一些方法,增强基础类的功能</Description>
    </PropertyGroup>

    <ItemGroup Condition=" '$(TargetFramework)' == 'netstandard2.1'">
        <PackageReference Include="System.Runtime.Loader" Version="4.3.0" />
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.Extensions.DependencyModel" Version="8.0.0-preview.2.23128.3" />
    </ItemGroup>

    <ItemGroup>
      <ProjectReference Include="..\EasilyNET.Core\EasilyNET.Core.csproj" />
    </ItemGroup>

</Project>
